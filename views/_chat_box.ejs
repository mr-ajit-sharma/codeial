<!--CHANGE: create chat box -->
<link rel="stylesheet" href="/css/chatBox.css">
<%if(locals.user){%>

    <div id="user-chat-box">
        <ul id="chat-message-list">
            <li class="other-message">
                <span>otherMessage</span>
                <sub><%= user.name%></sub>
            </li>
            <li class="self-message">
                <span>self message</span>
                <sub><%= user.name%></sub>
            </li>
        </ul>
        <div id="chat-message-input-container">
            <input type="text" id="chat-message-input" placeholder="type here.....">
            <button type="submit" id="send-message">send</button>
        </div>
    </div>
    <%}%>